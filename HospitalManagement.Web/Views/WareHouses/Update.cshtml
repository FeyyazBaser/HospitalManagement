@{
    ViewData["Title"] = "Save";
}
@model WareHouseDto
<h1>Update WareHouse</h1>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="WareHouses">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Floor"></label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>WareHouse</label>
                <select asp-for="BuildingId" asp-items="ViewBag.buildings" class="form-control"></select>

            </div>


            <div class="form-group">

                <input type="submit" value="Save" class="btn-primary" />

            </div>
        </form>



    </div>


</div>

